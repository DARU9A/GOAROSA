    <form method="POST">
      <center>
        <div class="card border-primary mb-3" style="max-width: 30%;">
          <div class="card-header"><input type="text" name="to" placeholder="To" required></div>
          <div class="card-body text-primary">
            <h5 class="card-title"><input type="text" name="title" placeholder="Title" required></h5>
            <p class="card-text"><textarea name="content" cols="30" rows="5" placeholder="Content"></textarea></p>
          </div>
        </div>
        <input type="submit" value="보내기">
      </center>
    </form>
  </body>
</html>