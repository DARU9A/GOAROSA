    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  
    <style type="text/css">
      nav{
        margin-bottom: 10px;
      }
      .bg-primary{
        color: white;
      }
    </style>
  </head> 
  <body>
    <nav class="navbar  navbar-expand-sm  bg-primary  navbar-dark">
      <ul class="navbar-nav"> 
        <li class="nav-item active"> 
          <a class="nav-link" href="/main">GOAROSA</a> 
        </li> 
        <li class="nav-item"> 
          <a class="nav-link" href="/mail/inbox">Inbox</a> 
        </li> 
        <li class="nav-item"> 
          <a class="nav-link" href="/mail/outbox">Outbox</a> 
        </li> 
        <li class="nav-item"> 
          <a class="nav-link" href="/mail/send">Send mail</a>
        </li> 
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <div class="nav-link"><%= name %> <%= status %></div> 
        </li> 
        <li class="nav-item">
          <a class="nav-link" href="/users/logout">Sign out</a></div> 
        </li> 
      </ul>
    </nav>
    <h4 class="text-primary">공지사항</h4>
    <% if(posts){ %>
      <table class="table table-hover">
        <thead>
          <tr class="bg-primary">
            <th scope="col">#</th>
            <th scope="col">Content</th>
          </tr>
        </thead>
        <tbody>
          <% var num=0; %>
          <% posts.forEach(function(val){ %>
            <% if(val.identity == "teacher") { %>
              <% ++num %>
              <tr>
                <th scope="row"><%= num %></th>
                <td><%= val.content %></td>
              </tr>
            <% } %>
          <% }) %>
        </tbody>
      </table>
    <% } %>
    <h4 class="text-primary">과제</h4>
    <% if(posts){ %>
      <table class="table table-hover">
        <thead>
          <tr class="bg-primary">
            <th scope="col">#</th>
            <th scope="col">Content</th>
          </tr>
        </thead>
        <tbody>
          <% var num=0; %>
          <% posts.forEach(function(val){ %>
            <% if(val.identity == "student") { %>
              <% ++num %>
              <tr>
                <th scope="row"><%= num %></th>
                <td><%= val.content %></td>
              </tr>
            <% } %>
          <% }) %>
        </tbody>
      </table>
    <% } %>
    <form method="POST">
      <input type="text" name="content" required>   <input type="submit" value="올리기">  
    </form>
    </p>
  </body>
</html>